{
  "name": "svc/versioning-bundle",
  "description": "Private package to handle version numbers and deploys",
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Sven Vetter",
      "email": "git.09o@svenvetter.com"
    }
  ],
  "require": {
    "php": "^8.4",
    "symfony/console": "^7.4 | ^8",
    "symfony/http-kernel": "^7.4 | ^8",
    "symfony/dependency-injection": "^7.4 | ^8",
    "symfony/config": "^7.4 | ^8",
    "symfony/yaml": "^7.4 | ^8"
  },
  "suggest": {
    "easycorp/easy-deploy-bundle": "Prefered tool to deploy the application"
  },
  "autoload": {
    "psr-4": {
      "Svc\\VersioningBundle\\": "src/"
    }
  },
  "scripts": {
    "phpstan": "php -d memory_limit=-1 vendor/bin/phpstan analyse -c .phpstan.neon",
    "test": "php vendor/bin/phpunit"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^12.5"
  }
}
